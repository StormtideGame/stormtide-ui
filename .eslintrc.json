{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"node": true,
		"mocha": true
	},
	"rules": {
		"constructor-super": ["error"],
		"eqeqeq": ["error", "smart"],
		"indent": ["warn", "tab", { "SwitchCase": 1 }],
		"no-unused-vars": ["warn", { "vars": "local", "args": "none" }],
		"quotes": ["warn", "double", { "allowTemplateLiterals": true }],
		"semi": ["warn", "always"],
		"flowtype/use-flow-type": "warn"
	},
	"plugins": [
		"flowtype"
	]
}